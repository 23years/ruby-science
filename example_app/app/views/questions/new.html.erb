<%= simple_form_for @question, url: survey_questions_path(@survey) do |form| -%>
  <%= form.hidden_field :submittable_type %>

  <%= form.input :title %>

  <% if @question.submittable_type == 'MultipleChoice' -%>
    <%= form.fields_for(:options) do |option_fields| -%>
      <%= option_fields.input :text, label: 'Option' %>
    <% end -%>
  <% end -%>

  <% if @question.submittable_type == 'Scale' -%>
    <%= form.input :minimum %>
    <%= form.input :maximum %>
  <% end -%>

  <%= form.submit %>
<% end -%>
